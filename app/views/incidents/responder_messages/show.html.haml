.modal-dialog
  .modal-content
    .modal-header 
      %a.close(data-dismiss="modal") &times;
      %h4.modal-title
        Message From
        =resource.person.full_name
    .modal-body
      =resource.message
    .modal-footer
      =form_tag acknowledge_resource_path, method: :post, class: 'form form-inline', style: 'display: inline', remote: request.xhr? do
        %label.checkbox 
          Save In Timeline
          =check_box_tag :save_in_timeline, '1', false
        =submit_tag 'Acknowledge', class: 'btn btn-primary'
        =submit_tag 'Reply', class: 'btn btn-default'#, data: {edit_panel: new_resource_path(recipient:resource.person)}