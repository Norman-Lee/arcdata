  
=semantic_form_for [parent, resource], url: incidents_incident_event_log_path(parent, resource), builder: FormtasticBootstrap::FormBuilder, html: {class: 'form-horizontal'}, remote: request.xhr? do |f|
  .modal-header 
    %button.close(data-dismiss="modal") &times;
    %h3 Add Event
  .modal-body
    =f.input :event, as: :assignable_select
    =f.input :event_time, as: :time_field
    =f.input :message, input_html: {rows: 4}
  .modal-footer
    =f.action :submit, button_html: {class: "btn btn-primary"}
