= semantic_form_for resource, url: form_url, builder: FormtasticBootstrap::FormBuilder, remote: true, html: {class: 'form-horizontal'} do |f|
  .modal-header 
    %a.close(data-dismiss="modal") &times;
    %h3 Edit #{params[:panel_name].titleize}
  .modal-body
    =hidden_field_tag :panel_name, params[:panel_name]
    =panel params[:panel_name], f
  .modal-footer
    =f.action :submit, button_html: {class: 'btn btn-primary', data: {disable_with: "Savingâ€¦"}}, label: 'Update Incident'
:javascript
  if (!window.formController) {window.formController = new DatIncidentsFormController()};